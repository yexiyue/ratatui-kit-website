---
import { Github } from "lucide-react";
import Layout from "./Layout.astro";
import SliderMenu from "@/components/SliderMenu.astro";
import ThemeButton from "@/components/ThemeButton";

interface Props {
  index?: boolean;
}
const { index = false } = Astro.props;
---

<Layout>
  <div
    class:list={[
      "drawer overflow-hidden",
      {
        "lg:drawer-open": !index,
      },
    ]}
  >
    <input id="docs-drawer" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content h-screen flex flex-col overflow-auto">
      <!-- Navbar -->
      <div class="navbar bg-base-100 w-full sticky top-0">
        <div
          class:list={[
            "flex-none",
            {
              "lg:hidden": !index,
            },
          ]}
        >
          <label
            for="docs-drawer"
            aria-label="open sidebar"
            class="btn btn-square btn-ghost"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              class="inline-block h-6 w-6 stroke-current"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </label>
        </div>
        <div
          class:list={[
            "mx-2 flex-1 px-2 cursor-pointer",
            {
              "lg:hidden": !index,
            },
          ]}
        >
          <a href="/" class="text-nowrap">Ratatui Kit</a>
        </div>
        <div class="flex-1"></div>
        <div class="navbar-end flex gap-2">
          <a
            href="https://github.com/yexiyue/ratatui-kit"
            target="_blank"
            class="btn btn-circle btn-ghost btn-primary"
          >
            <Github size={20} />
          </a>
          <ThemeButton client:load transition:persist />
        </div>
      </div>
      <!-- Page content here -->
      <slot />
    </div>

    <div class="drawer-side z-40">
      <label for="docs-drawer" aria-label="close sidebar" class="drawer-overlay"
      ></label>
      <div class="bg-base-100 h-full">
        <div class="p-4 text-center cursor-pointer">
          <a href="/">Ratatui Kit</a>
        </div>
        <SliderMenu transition:persist />
      </div>
    </div>
  </div>
</Layout>
